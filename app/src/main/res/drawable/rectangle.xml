<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/few_gray"/>
            <corners android:radius="5dp"/>
            <gradient android:startColor="@color/few_gray"
                android:endColor="@color/more_gray">

            </gradient>
            <corners android:topRightRadius="1.4dp" android:topLeftRadius="1.5dp" android:bottomRightRadius="1.4dp" android:bottomLeftRadius="1.5dp"/>
        </shape>
    </item>
    <item android:bottom="1.5dp"
        android:right="0.7dp"
        android:top="0.5dp"
        android:left="0.7dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white"/>
            <corners android:radius="1.5dp"/>
        </shape>
    </item>
</layer-list>